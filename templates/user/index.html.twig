                        <!-- /review_card -->
                    </div>
                    <!-- /reviews -->
                    <div class="text-right"><a href="leave-review.html" class="btn_1 gradient">Leave a Review</a></div>
                </section>
                <!-- /section -->
            </div>
        </div>
    </div>
